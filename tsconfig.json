{
   "version": "2.4.2",
   "compilerOptions": {
       "lib": ["es5", "es6", "es2018"],
       "target": "es6",
       "module": "commonjs",
       "moduleResolution": "node",
       "emitDecoratorMetadata": true,
       "experimentalDecorators": true,
       "outDir": "./dist",
       "sourceMap": true,
       "skipLibCheck": true
   },
   "exclude": [
       "node_modules"
   ]
}


